                    <ProgressBar x:Name="A0_bar" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="183" Maximum="1023" LargeChange="10" SmallChange="1"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
